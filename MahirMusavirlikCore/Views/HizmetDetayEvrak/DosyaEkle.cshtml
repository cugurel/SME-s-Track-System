                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="file" accept=".pdf, .xlsx, .xls, .doc, .docx, .jpeg, .jpg, .png" id="dosya" name="Dosya" required class="form-control" />

                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button onclick="uploadDocument();" id="btn-yukle" type="button" class="btn btn-success">Yükle</button>
                                </div>
                            </div>
                        </form>

                        <script>
                            function uploadDocument() {

                                var dosyaAdi = $('#dosya-adi').val();
                                var dosya = $('#dosya')[0].files[0];

                                if (dosyaAdi === "") {
                                    alert('Dosya adı giriniz.');
                                    return;
                                }

                                if (dosya === null || typeof dosya === "undefined") {
                                    alert('Dosya seçiniz.');
                                    return;
                                }

                                var data = new FormData();
                                data.append('DosyaAdi', dosyaAdi);
                                data.append('Dosya', dosya);

                                jQuery.ajax({
                                    url: '@Url.Action("UploadDocument", "HizmetDetayEvrak")',
                                    data: data,
                                    cache: false,
                                    contentType: false,
                                    processData: false,
                                    method: 'POST',
                                    type: 'POST', // For jQuery < 1.9
                                    complete: function (xhr) {
                                        if (xhr.status === 200) {
                                            alert('Dosya yükleme başarılı');
                                            window.location.href = "/HizmetDetayEvrak/Index/";
                                        }
                                    },
                                    error: function (xhr) {
                                        if (xhr.status === 400) {
                                            alert('Dosya yükleme başarısız oldu!');
                                        }
                                    }
                                });
                            }
                        </script>
