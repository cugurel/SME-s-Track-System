@model MahirMusavirlikCore.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Mahir Müşavirlik - Kobi Sistemi</title>

    <!-- Bootstrap -->
    <link href="~/master/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/master/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/master/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/master/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/master/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @Html.ValidationSummary()
                    <form action="/Login/Login" method="post">
                        @Html.AntiForgeryToken()
                        <h1>
                            <img src="~/master/production/images/logo-wide.png" />
                        </h1>

                        <div>
                            <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="Password" placeholder="Şifre" required="" />
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit">Giriş Yap</button>
                        </div>

                        <div class="clearfix"></div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>

